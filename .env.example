# Database - Supabase PostgreSQL Connection
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,txt

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=SkillSense API
VERSION=1.0.0

# CORS - Frontend URLs
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:3001"]

# Admin
ADMIN_EMAIL=admin@skillsense.com
ADMIN_PASSWORD=admin123

# Supabase (Optional - if using Supabase Storage)
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# ============================================
# PHASE 2: Data Collection API Keys
# ============================================

# GitHub API
# Get your token at: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
GITHUB_TOKEN=your_github_personal_access_token_here

# Tavily Search API
# Sign up at: https://tavily.com
# API key format: tvly-xxxxxxxxxxxxx
TAVILY_API_KEY=your_tavily_api_key_here

# Collection Settings
COLLECTION_TIMEOUT=60
MAX_COLLECTION_RETRIES=3
ENABLE_PARALLEL_COLLECTION=true

# ============================================
# PHASE 2: Throttling Configuration
# ============================================

# GitHub Crawl Cooldown (in seconds)
# Default: 3600 (1 hour) - prevents abuse and API rate limiting
GITHUB_CRAWL_COOLDOWN_SECONDS=3600

# Enable/Disable Throttling
# Set to False to allow unlimited crawls (not recommended for production)
ENABLE_CRAWL_THROTTLING=true
